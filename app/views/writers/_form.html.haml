= form_for @writer do |f|
  - if @writer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@writer.errors.count, "error")} prohibited this writer from being saved:"
      %ul
        - @writer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :book
    = f.text_field :book
  .field
    = f.label :address
    = f.number_field :address
  .actions
    = f.submit 'Save'
